{{#partial "contenido" }}

    <style>
        .mt-5 {
            margin-top: 3rem!important;
            width: 70%; /* controlamos el ancho*/
        }
        form {
                background-color: #154f76; /* Tu color personalizado para el formulario */
        }

        .form-control { /*colores para los imput del formulario*/
                background-color: #dceaf3;
                color: #35424a;
                border: 1px solid #35424a;
        }
    </style>
    <!-- clases de bootstrap -> text-black: color fw-bold: cuerpo -->
    <!--<h5 class="card-title text-black fw-bold">Servicios:</h5>-->
    <div class="container mt-5">
        <h2 class="text-center mb-4 text-white ">Modificar Entidad Prestadora</h2>

        <form class="p-3 rounded" method="post" action="/entidadesPrestadoras/{{entidadPrestadora.getId}}">
            <div class="accordion" id="accordionForm">

                <!-- Campo Normal -->
                <div class="mb-3">
                    <label for="campoNormal" class="form-label text-white fw-bold">Nombre Entidad Prestadora:</label>
                    <input type="text" class="form-control" id="campoNormal" name="nombre_edit" placeholder="{{entidadPrestadora.getNombre}}">
                </div>

                <!-- para dejar una espacio entre entre el show y los botones-->
                <div class="d-flex justify-content-center mb-4">
                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-primary">Confirmar Edicion</button>

                </div>

                <!-- Botones Dentro del fromulario - no centrados
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button type="reset" class="btn btn-secondary">Limpiar</button>
                </div>
                -->
            </div>

        </form>
        <!-- para dejar una espacio entre entre el show y los botones-->
        <div class="d-flex justify-content-center mb-4">
        </div>
        <div class="d-flex justify-content-center mb-4">
            <button class="btn btn-secondary me-2" type="button" onclick="volverAtras()"> Volver </button>
        </div>

    </div>


    <script>
        function volverAtras() {
            window.history.back();
        }
    </script>
{{/partial}}
{{> templates/dashboard}}