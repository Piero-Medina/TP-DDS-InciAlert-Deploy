{{#partial "contenido" }}

    <!-- color de fondo del incidente #154f76-->
    <style>
        /*agregando al div */
        .custom-background {
            background-color: #154f76;
        }
    </style>

    <!-- Lista de Incidentes -->
    <div class="container mt-5">
        <h2 class="mb-4 text-center text-white" >Entidades Prestadoras</h2>

        <!-- Incidente 1 -->
    {{#each entidadPrestadora}}
        <div class="card mb-3 custom-background text-white ">
            <div class="card-body">
                <h5 class="card-title">Entidad Prestadora {{this.getNombre}}</h5>
                <p class="card-text"></p> <!-- deja un leve espacio, es para cuando no hay descripcion-->

                <a href="/entidadesPrestadoras/{{this.getId}}"><button class="btn btn-info me-2">Ver en Detalle</button></a>
                <a href="/entidadesPrestadoras/eliminar/{{this.getId}}"><button class="btn btn-danger me-2">Eliminar Entidad Prestadora</button></a>
                <a href="/entidadesPrestadoras/{{this.getId}}/editar"><button class="btn btn-warning me-2">Modificar Entidad Prestadora</button></a>
                <a href="/entidadesPrestadoras/{{this.getId}}/entidades"><button class="btn btn-primary me-2">Ver Entidades</button></a>
            </div>
        </div>
    {{/each}}

        <!-- BotÃ³n para Agregar Incidente -->
        <div class="d-flex justify-content-center mb-4">
            {{#if puedeAgregarMasEntidades}}
            <a href="/entidadesPrestadoras/crear"><button class="btn btn-success me-2">Agregar Entidad Prestadora</button></a>
            {{/if}}
            <button class="btn btn-secondary" onclick="volverAtras()">Volver</button>
        </div>
    </div>

    <script>
        function volverAtras() {
            window.history.back();
        }
    </script>
{{/partial}}
{{> templates/dashboard}}