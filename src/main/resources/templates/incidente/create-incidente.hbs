{{#partial "contenido" }}
    <style>
        .mt-5 {
            margin-top: 3rem!important;
            width: 50%;
        }
    </style>

    <div class="container mt-5">
        <h2 class="text-center mb-4 text-white">Crear Incidente</h2>
        <form class="bg-light p-3 rounded" method="post" action="/prestaciones/{{prestacion.getId}}/incidentes">
            <div class="accordion" id="accordionForm">

                <!-- Campo Normal -->
                <div class="mb-3">
                    <label for="campoNormal" class="form-label fw-bold">Nombre Incidente:</label>
                    <input type="text" class="form-control" id="campoNormal" name="nombre" placeholder="Nombre Incidente">
                </div>
                <!-- Campo Normal -->
                <div class="mb-3">
                    <label for="areaTexto" class="form-label  fw-bold ">Observaciones:</label>
                    <textarea class="form-control" id="areaTexto" rows="4" name="observacion" placeholder="Observaciones"></textarea>
                </div>
                <!-- Campo Normal -->
                <div class="mb-3">
                    <label for="campoNormal" class="form-label fw-bold">Sobre El Servicio Prestado:</label>
                    <input type="text" class="form-control" id="campoNormal" placeholder="{{prestacion.getNombreServicioPrestado}}" disabled>
                </div>

                <div class="mb-3">
                    <label for="fechaNacimiento" class="form-label fw-bold">Seleccion Una Fecha:</label>
                    <input type="date" class="form-control" id="fechaNacimiento" name="fecha">
                </div>

                <div class="mb-3">
                    <label for="hora" class="form-label fw-bold">Seleccione una Hora:</label>
                    <input type="time" class="form-control" id="hora" name="hora">
                </div>

                <div class="text-center mb-3">
                    <button class="btn btn-primary" type="submit" >Crear Incidente</button>
                </div>

            </div>
        </form>
        <!-- para dejar una espacio -->
        <div class="d-flex justify-content-center mb-4">
        </div>

        <div class="d-flex justify-content-center mb-4">
            <button class="btn btn-secondary me-2" onclick="volverAtras()" >Volver</button>
        </div>

    </div>

    <script>
        function volverAtras() {
            window.history.back();
        }
    </script>
{{/partial}}
{{> templates/dashboard}}