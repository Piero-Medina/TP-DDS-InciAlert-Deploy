<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>sign up</title>
    <!-- icono de pesta침a -->
    <link rel="icon" type="image/x-icon" href="img/people.svg">
    <!-- Bootstrap/CDN/CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <style>
    body {
        background-color: #0a2642;
        color: black;
        margin: 0; /* Agrega esto para eliminar los m치rgenes predeterminados del cuerpo */
    }
    custom-background{
        background-color: #0a2642;
    }

    .mt-5 {
        margin-top: 3rem!important;
        width: 70%;
        
    }
    </style>

<div class="container mt-5 mb-5">
    <div class="text-center">
    <img class="mb-4" src="img/people.svg" alt="" width="72" height="57">
    </div>
    <form class="bg-light p-3 rounded" method="post" action="/signUp">
        <div class="accordion" id="accordionForm">
            <h1 class="text-center mb-4">Registro</h1>


            <!-- Campo Normal -->
            <div class="mb-3">
                <label for="campoNormal" class="form-label">Nombre:</label>
                <input type="text" class="form-control" id="campoNormal" name="nombre" placeholder="Campo de texto normal">
            </div>
            <!-- Campo Normal -->
            <div class="mb-3">
                <label for="campoNormal" class="form-label">Apellido:</label>
                <input type="text" class="form-control" id="campoNormal" name="apellido" placeholder="Campo de texto normal">
            </div>
            <!-- Campo Normal -->
            <div class="mb-3">
                <label for="campoNormal" class="form-label">mail:</label>
                <input type="text" class="form-control" id="campoNormal" name="email" placeholder="Campo de texto normal">
            </div>
            <!-- Campo Normal -->
            <div class="mb-3">
                <label for="campoNormal" class="form-label">Nombre de Usuario:</label>
                <input type="text" class="form-control" id="campoNormal" name="usuario" placeholder="Campo de texto normal">
                <p class="text-danger"> {{errorUsuario}} </p>
            </div>
            <!-- Campo Normal -->
            <div class="mb-3">
                <label for="campoNormal" class="form-label">Contrase침a:</label>
                <input type="text" class="form-control" id="campoNormal" name="contrasenia" placeholder="Campo de texto normal">
                <p class="text-danger"> {{errorContrasenia}} </p>
            </div>

            <!-- seleccinas Una Opcion -->  <!-- name = "category"  -->
            <div class="mb-3">
                <label class="form-label"> Seleccione una una opci칩n:</label>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="category" id="opcion1" value="Ciudadano">
                    <label class="form-check-label" for="opcion1">Ciudadano</label>
                </div>
            
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="category" id="opcion2" value="Propietario">
                    <label class="form-check-label" for="opcion2">Propietario</label>
                </div>

            </div>

            <!-- Botones -->
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-primary">Registrarse</button>
                <button type="button" class="btn btn-secondary" onclick="volverAtras()"> Volver </button>
            </div>

        </div>
    </form>

</div>

<script>
    function volverAtras() {
        window.history.back();
    }
</script>

</body>
</html>
