{{#partial "contenido" }}

    <style>
        custom-background{
            background-color: #0a2642;
        }

        .mt-5 {
            margin-top: 3rem!important;
            width: 70%;
        }
        form {
            background-color: #154f76; /* Tu color personalizado para el formulario */
        }

        .form-control { /*colores para los imput del formulario*/
            background-color: #dceaf3;
            color: #35424a;
            border: 1px solid #35424a;
        }
    </style>

    {{#if municipioOk}}
    <!-- clases de bootstrap -> text-black: color fw-bold: cuerpo -->
    <!--<h5 class="card-title text-black fw-bold">Servicios:</h5>-->
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-white">Modificar Localizacion</h1>

        <form class="p-3 rounded" method="post" action="/{{idEntidadA}}/{{idEntidad}}/{{tipoEntidad}}/localizacion/municipio/{{idProvincia}}">
            <div class="accordion" id="accordionForm">
                <!--<h1 class="text-center mb-4 text-white ">Formulario con Acordeón</h1>-->

                <div class="mb-3">
                    <label for="seleccionOpcion" class="form-label text-white fw-bold">Selecciona un Municipio:</label>
                    <select class="form-select" id="seleccionOpcion" name="varMunicipio" aria-label="Selecciona una opción">
                        <option selected>Selecciona una opción...</option>
                        {{#each municipio}}
                            <option value="{{this.getId}}">{{this.getNombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <!-- para dejar una espacio entre entre el show y los botones-->
                <div class="d-flex justify-content-center mb-4">

                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-primary">Confirmar Municipio</button>
                </div>

                <!-- Botones Dentro del fromulario - no centrados
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button type="reset" class="btn btn-secondary">Limpiar</button>
                </div>
                -->
            </div>

        </form>
        <!-- para dejar una espacio entre entre el show y los botones-->
        <div class="d-flex justify-content-center mb-4">

        </div>
        <div class="d-flex justify-content-center mb-4">
            <button class="btn btn-secondary me-2" type="button" onclick="volverAtras()" >Volver</button>
        </div>

    </div>
    {{/if}}

    {{#if departamentoOk}}
        <!-- clases de bootstrap -> text-black: color fw-bold: cuerpo -->
        <!--<h5 class="card-title text-black fw-bold">Servicios:</h5>-->
        <div class="container mt-5">
            <h1 class="text-center mb-4 text-white">Modificar Localizacion</h1>

            <form class="p-3 rounded" method="post" action="/{{idEntidadA}}/{{idEntidad}}/{{tipoEntidad}}/localizacion/departamento/{{idProvincia}}">
                <div class="accordion" id="accordionForm">
                    <!--<h1 class="text-center mb-4 text-white ">Formulario con Acordeón</h1>-->

                    <div class="mb-3">
                        <label for="seleccionOpcion" class="form-label text-white fw-bold">Selecciona un Departamento:</label>
                        <select class="form-select" id="seleccionOpcion" name="varDepartamento" aria-label="Selecciona una opción">
                            <option selected>Selecciona una opción...</option>
                            {{#each departamento}}
                                <option value="{{this.getId}}">{{this.getNombre}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- para dejar una espacio entre entre el show y los botones-->
                    <div class="d-flex justify-content-center mb-4">

                    </div>

                    <div class="text-center mb-3">
                        <button type="submit" class="btn btn-primary">Confirmar Departamento</button>
                    </div>

                    <!-- Botones Dentro del fromulario - no centrados
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                        <button type="reset" class="btn btn-secondary">Limpiar</button>
                    </div>
                    -->
                </div>

            </form>
            <!-- para dejar una espacio entre entre el show y los botones-->
            <div class="d-flex justify-content-center mb-4">

            </div>
            <div class="d-flex justify-content-center mb-4">
                <button class="btn btn-secondary me-2" type="button" onclick="volverAtras()" >Volver</button>
            </div>

        </div>
    {{/if}}

    <script>
        function volverAtras() {
            window.history.back();
        }
    </script>

{{/partial}}
{{> templates/dashboard}}