{{#partial "contenido" }}

    <!-- color de fondo del incidente #154f76-->
    <style>
        /*agregando al div */
        .custom-background {
            background-color: #154f76;
        }
    </style>

    <!-- Lista de Incidentes -->
    <div class="container mt-5">
        <h2 class="mb-4 text-center text-white" >Lista de Servicios</h2>

        {{#each servicios}}
        <!-- Incidente 1 -->
        <div class="card mb-3 custom-background text-white ">
            <div class="card-body">
                <h5 class="card-title">Servicio {{this.getNombre}}</h5>
                <p class="card-text">Descripcion: {{this.getDescripcion}}</p>
                <a href="/servicios/{{this.getId}}/editar"><button class="btn btn-warning me-2">Modificar Servicio</button></a>
                <a href="/servicios/eliminar/{{this.getId}}"><button class="btn btn-danger me-2">Eliminar Servicio</button></a>
            </div>
        </div>
        {{/each}}

        <!-- BotÃ³n para Agregar Incidente -->
        <div class="d-flex justify-content-center mb-4">
            <a href="/servicios/crear"><button class="btn btn-success me-2">Agregar Servicio</button></a>
            <button class="btn btn-secondary" onclick="volverAtras()" >Volver</button>
        </div>
    </div>

    <script>
        function volverAtras() {
            window.history.back();
        }
    </script>
{{/partial}}
{{>templates/dashboard}}